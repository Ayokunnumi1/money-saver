<section>
 <div class='expense-navbar'>
    <%= button_to(categories_path, method: :get) do %>
    <%= image_tag('back-arrow.svg', class: '') %>
    <% end %>
    <p> <%= @category.name %> </p>
    <%= image_tag('hamburger.svg', class: '') %>
  </div>

  <p> Total Amount: $<%= @category.expenses.sum(:amount) %> </p>
  <% @category.expenses.each do |expense| %>
    <div id="expense_<%= expense.id %>">
      <div>ðŸ’¸</div>
      <p><%= expense.name %></p>
      <p>$<%= expense.amount %></p>
      <%= link_to 'Edit', edit_expense_path(expense), class: '' %>
      <%= button_to 'Delete', expense_path(expense), method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: '' %>
    </div>
  <% end %>
  
  <%= link_to 'Add Expenses', new_expense_path(category_id: @category.id) %>
</section>
