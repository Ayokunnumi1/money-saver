<div class='category-form-back-arrow'>
  <%= button_to(categories_path, method: :get) do %>
  <%= image_tag('back-arrow.svg', class: 'back-arrow') %>
  <% end %>
</div>

<section class='form-category-container'>
  <div class='form-category-content'>
    <h1>Category Form</h1>
    
    <%= form_with(model:@category, url: categories_path, local: true, class: 'category-form') do |form| %>

      <div class="category-field">
        <%= form.label :name, "Category" %>
        <%= form.collection_select(:name, ["Food", "Clothes", "Health", "Rent", "School", "Savings", "Family", "Charity", "Investment", "Business", "Pet", "Maintenance", "Treats", "Transportation", "Other"], :to_s, :to_s, { prompt: "---" }, { class: 'category-field' }) %>
      </div>
    
      <div class="category-field">
        <%= form.label :icon, "Icon" %>
        <%= form.collection_select(:icon, [ "🍔", "👚", "🏥", "🏫", "📚", "🐷", "👪", "🎁", "💌", "👔", "🐈", "🛠", "🏖", "🚌", "💡" ], :to_s, :to_s, { prompt: "---" }, { class: 'category-field' }) %>
      </div>
    
      <div class="category-field submit-food-btn"><%= form.submit 'Submit Food', class: 'submit-food' %></div>
    <% end %>
  </div>
</section>